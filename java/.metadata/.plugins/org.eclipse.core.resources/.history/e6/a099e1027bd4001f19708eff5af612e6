
public class PokemonFeu extends Pokemon {

	
	public PokemonFeu(String name, int hp, int atk) {
		super(name, hp, atk);
	}

	@Override
	public void attaquer(Pokemon p) {
		if (p.getClass().getName() == "PokemonPlante") {
			p.hp -= 2*this.atk;
		}else if (p.getClass().getName() == "PokemonEau" || p.getClass().getName() == "PokemonFeu" ) {
			p.hp -= 0.5*this.atk;
		}else {
			p.hp -= this.atk;
		}
	}
}
